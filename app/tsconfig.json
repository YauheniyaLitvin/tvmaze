{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,      // Allows usage of an alternate module import syntax
        "noImplicitAny": true,
        "lib": [ "es2015" ],     
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "sourceMap": false,
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}